{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ESNext"
		],
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./build",
		"newLine": "lf",
		"sourceMap": false,
		"baseUrl": ".",
		"removeComments": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"useUnknownInCatchVariables": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true
	},
	"typeRoots": [
		"./node_modules/@types",
		"./src/typings"
	],
	"exclude": [
		"node_modules",
		"/src/deploy-commands.js",
		"./build"
	]
}
